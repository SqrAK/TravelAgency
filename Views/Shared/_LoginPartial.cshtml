@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post,
    new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Здравствуйте, " + User.Identity.GetUserName()+ "!",
                "Info", "Account", routeValues: null,
                htmlAttributes: new{ title = "Manage"})
            </li>
            <li>
                @Html.ActionLink("Выйти", "Logout", "Account", null, new { @class = "" })
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Вы зашли анонимно", "", "", routeValues: null,
    htmlAttributes: new{ id = ""})
        </li>
        <li>
            @Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null,
    htmlAttributes: new{ id = "loginLink"})
        </li>
    </ul>
}